 @page
 @model Ranking
 @{
     Layout = null;
     ViewData["Title"] = "Koi Ranking";
 }
 <!DOCTYPE html>
 <html lang="en">
 <head>
     <!-- Required meta tags -->
     <meta charset="utf-8">
     <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
     <title>Koi Ranking</title>
     <!-- plugins:css -->
     <link rel="stylesheet" href="./vendors/mdi/css/materialdesignicons.min.css">
     <link rel="stylesheet" href="./vendors/base/vendor.bundle.base.css">
     <!-- inject:css -->
     <link rel="stylesheet" href="~/css/cssRanking/style.css">
     <!-- endinject -->
     <link rel="shortcut icon" href="../../img/favicon.png" />
 </head>
 <body>
     <div class="main-panel">
         <div class="content-wrapper">
             <div class="row">
                 <div class="col-lg-12 grid-margin stretch-card">
                     <div class="card">
                         <div class="card-body">
                             <h4 class="card-title">Koi Fish Ranking Table</h4>
                             <div class="table-responsive">
                                 <table class="table table-striped">
                                     <thead>
                                         <tr>
                                             <th>User</th>
                                             <th>Name</th>
                                             <th>Breed</th>
                                             <th>Size (cm)</th>
                                             <th>Color</th>
                                             <th>Votes</th>
                                             <th>Price</th>
                                             <th>Origin</th>
                                             <th>Entry Date</th>
                                         </tr>
                                     </thead>
                                     <tbody>
                                         @foreach (var koi in Model.KoiList)
                                         {
                                             <tr>
                                                 <!-- Hiển thị hình ảnh cố định hoặc từ dữ liệu -->
                                                 <td class="py-1">
                                                     <img src="../../img/faces/face1.jpg" alt="image" />
                                                 </td>
                                                 <!-- Hiển thị thông tin cá Koi từ CSDL -->
                                                 <td>@koi.Name</td>
                                                 <td>@koi.Breed</td>
                                                 <td>@koi.Size</td>
                                                 <td>@koi.Color</td>
                                                   <!--doan nay can code gi do-->
                                                 <td>@string.Format("{0:C}", koi.Price)</td>
                                                 <td>@koi.Origin</td>
                                                <td>
                                                    @koi.DateOfEntry?.ToString("dd/MM/yyyy") ?? "N/A"
                                                </td>
                                             </tr>
                                         }
                                     </tbody>
                                 </table>
                             </div>
                         </div>
                     </div>
                 </div>
             </div>
         </div>
         <footer class="footer">
             <div class="d-sm-flex justify-content-center justify-content-sm-between">
                 <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">Copyright © <a href="https://www.bootstrapdash.com/" target="_blank">bootstrapdash.com</a> 2021</span>
                 <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">Only the best <a href="https://www.bootstrapdash.com/" target="_blank">Bootstrap dashboard</a> templates</span>
             </div>
         </footer>
     </div>
     <!-- plugins:js -->
     <script src="../../vendors/base/vendor.bundle.base.js"></script>
     <!-- inject:js -->
     <script src="../../js/off-canvas.js"></script>
     <script src="../../js/hoverable-collapse.js"></script>
     <script src="../../js/template.js"></script>
 </body>
 </html>
