<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <h6>Danh sách Cá Koi</h6>
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Tên</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Giống loài</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">TT Sức Khỏe</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Màu Sắc</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Nguồn gốc</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Ngày Đăng Ký</th>
                                    <th class="text-secondary opacity-7">Bổ Sung</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.KoiManagementByEmail != null && Model.KoiManagementByEmail.Any())
                                {
                                    @foreach (var item in Model.KoiManagementByEmail)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex px-2 py-1">
                                                    <div>
                                                        <img src="~/assets/assetsKoiFishMember/img/team-2.jpg" class="avatar avatar-sm me-3" alt="@item.Name">
                                                    </div>
                                                    <div class="d-flex flex-column justify-content-center">
                                                        <h6 class="mb-0 text-sm">@item.Name</h6>
                                                        <p class="text-xs text-secondary mb-0">@item.UserEmailNavigation?.Email</p> <!-- Kiểm tra UserEmailNavigation có null -->
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <p class="text-xs font-weight-bold mb-0">@item.Breed</p>
                                                <p class="text-xs text-secondary mb-0">Loài Cá</p>
                                            </td>
                                            <td class="align-middle text-center text-sm">
                                                <span class="badge badge-sm @(item.HealthStatus == "Good" ? "bg-gradient-success" : "bg-gradient-secondary")">
                                                    @item.HealthStatus
                                                </span>
                                            </td>
                                            <td class="align-middle text-center">
                                                <span class="text-secondary text-xs font-weight-bold">@item.Color</span>
                                            </td>
                                            <td class="align-middle text-center">
                                                <span class="text-secondary text-xs font-weight-bold">@item.Origin</span>
                                            </td>
                                            <td class="align-middle text-center">
                                                <span class="text-secondary text-xs font-weight-bold">
                                                    @item.DateOfEntry?.ToString("dd/MM/yyyy") ?? "N/A"
                                                </span>
                                            </td>
                                            <td class="align-middle">
                                                <div class="action-box">
                                                    <a asp-page="./Edit" asp-route-id="@item.KoiId" class="action-link">Edit</a> |
                                                    <a asp-page="./Details" asp-route-id="@item.KoiId" class="action-link">Details</a> |
                                                    <a asp-page="./Delete" asp-route-id="@item.KoiId" class="action-link">Delete</a>
                                                    <p>
                                                        <a asp-page="Create" class="action-link create-new">Create New</a>
                                                    </p>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" class="text-center">Không có dữ liệu để hiển thị.</td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

